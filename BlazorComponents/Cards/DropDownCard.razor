@inherits DropDownCardBase

<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">@Header</h6>
        <div class=@DropDownDivClass>
            <a class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded=@_expanded>
                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
            <div class=@DropDownMenuLinkClass aria-labelledby="dropdownMenuLink">
                <div class="dropdown-header">@DropDownHeader</div>
                @if (DropDownItems != null)
                {
                    foreach (var item in DropDownItems)
                    {
                        <DropDownItem Text=@item.Item1  ClickAction=@item.Item2 />
                    }
                }
            </div>
        </div>
    </div>
    <CascadingValue Value="this">
        @ChildContent
    </CascadingValue>
</div>
